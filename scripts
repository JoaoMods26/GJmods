    <script>
        // Variables globales
        let currentPage = 1;
        let currentQuery = '';
        let currentSort = 'date';
        let currentMode = '';
        let totalPages = 1;
        let allScripts = [];

        // Elementos DOM
        const searchForm = document.getElementById('searchForm');
        const searchInput = document.getElementById('searchInput');
        const searchBtn = document.getElementById('searchBtn');
        const sortFilter = document.getElementById('sortFilter');
        const modeFilter = document.getElementById('modeFilter');
        const scriptsGrid = document.getElementById('scriptsGrid');
        const loadingState = document.getElementById('loadingState');
        const noResults = document.getElementById('noResults');
        const resultsHeader = document.getElementById('resultsHeader');
        const resultsCount = document.getElementById('resultsCount');
        const pageInfo = document.getElementById('pageInfo');
        const pagination = document.getElementById('pagination');
        const scriptModal = document.getElementById('scriptModal');

        // API Configuration
        const SCRIPTBLOX_API = 'https://scriptblox.com/api/script/search';
        const SCRIPTS_PER_PAGE = 20;

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            initializeParticles();
            setupEventListeners();
            loadRecentScripts(); // Cargar scripts recientes al inicio
        });

        function setupEventListeners() {
            searchForm.addEventListener('submit', handleSearch);
            sortFilter.addEventListener('change', handleSortChange);
            modeFilter.addEventListener('change', handleModeChange);
            
            // Cerrar modal al hacer clic fuera
            scriptModal.addEventListener('click', function(e) {
                if (e.target === scriptModal) {
                    closeModal();
                }
            });

            // Efecto de scroll para navbar
            window.addEventListener('scroll', function() {
                const navbar = document.getElementById('navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        }

        async function handleSearch(e) {
            e.preventDefault();
            const query = searchInput.value.trim();
            
            // Permitir búsqueda vacía para obtener scripts recientes
            currentQuery = query;
            currentPage = 1;
            await searchScripts();
        }

        async function handleSortChange() {
            currentSort = sortFilter.value;
            currentPage = 1;
            // Siempre buscar cuando cambien los filtros
            await searchScripts();
        }

        async function handleModeChange() {
            currentMode = modeFilter.value;
            currentPage = 1;
            // Siempre buscar cuando cambien los filtros
            await searchScripts();
        }

        async function searchScripts() {
            showLoading(true);
            hideResults();

            try {
                let url = SCRIPTBLOX_API;
                const params = new URLSearchParams({
                    max: SCRIPTS_PER_PAGE,
                    page: currentPage - 1 // ScriptBlox usa 0-based pages
                });

                // Solo agregar query si existe
                if (currentQuery) {
                    params.append('q', currentQuery);
                }

                if (currentMode) {
                    params.append('mode', currentMode);
                }

                // Si no hay búsqueda específica, obtener scripts recientes
                if (!currentQuery) {
                    // Para scripts recientes, usamos la API sin query
                    url = 'https://scriptblox.com/api/script/fetch';
                    params.set('max', SCRIPTS_PER_PAGE);
                    params.set('page', currentPage - 1);
                    
                    // Ordenar por fecha para obtener los más recientes
                    params.append('sort', 'date');
                }

                const response = await fetch(`${url}?${params}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                
                if (data.result && data.result.scripts) {
                    allScripts = data.result.scripts;
                    totalPages = Math.ceil((data.result.totalPages || 1));
                    
                    if (allScripts.length === 0) {
                        showNoResults();
                    } else {
                        displayScripts(allScripts);
                        updatePagination();
                        showResults();
                    }
                } else {
                    showNoResults();
                }

            } catch (error) {
                console.error('Error searching scripts:', error);
                showNotification('Error al buscar scripts. Intenta nuevamente.', 'error');
